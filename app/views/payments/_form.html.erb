<div class="payment-form">
  <form>
    <div class="row">
      <div class="form-group col">
        <select class="custom-select">
          <option selected>Select a pot</option>
          <% Pot.order("name").pluck(:id, :name).each do |(id, name)| %>
            <option value="<%= id %>"><%= name %></option>
          <% end %>
        </select>
      </div>
      <div class="w-100"></div>
      <div class="form-group col col-md-3">
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text"><i class="fas fa-fw fa-pound-sign"></i></div>
          </div>
          <input class="form-control" type="number" step="0.02" name="amount" placeholder="Amount">
        </div>
      </div>
      <div class="w-100 d-block d-md-none"></div>
      <div class="form-group col">
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text"><i class="fas fa-fw fa-tag"></i></div>
          </div>
          <input class="form-control" type="text" name="tags" placeholder="Tags">
        </div>
      </div>
      <div class="w-100"></div>
      <div class="form-group col">
        <button type="submit" class="btn btn-success btn-block">Track Payment</button>
      </div>
    </div>
  </form>
</div>
